{
  "name": "pokemon-manager-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start-in-container": "docker-compose up --build --force-recreate",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:up": "npx prisma migrate dev --name",
    "migration:up:dev": "yarn start-in-container yarn migration:up"
  },
  "dependencies": {
    "@nestjs/apollo": "10.1.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "8.4.7",
    "@nestjs/graphql": "10.1.1",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-fastify": "8.4.7",
    "@nestjs/swagger": "6.1.2",
    "@prisma/client": "4.3.1",
    "apollo-server-fastify": "3.10.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "fastify-static": "4.7.0",
    "graphql": "16.6.0",
    "graphql-tools": "8.3.6",
    "passport": "0.6.0",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "ts-morph": "16.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.3",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.0.11",
    "@leocode/eslint-config": "2.0.0",
    "@types/jest": "27.0.1",
    "@types/node": "18.7.18",
    "@types/passport-http-bearer": "1.0.37",
    "@types/passport-jwt": "3.0.7",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "axios": "0.27.2",
    "axios-retry": "3.3.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "prisma": "4.3.1",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
